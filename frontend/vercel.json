{
  "version": 2,
  "builds": [
    { "src": "angular.json", "use": "@vercel/static-build", "config": { "distDir": "dist/angular" } }
  ],
  "framework": null,
  "env": {
    "NG_PERSISTENT_BUILD_CACHE": "1"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "https://your-render-service.onrender.com/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
